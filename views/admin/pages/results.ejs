<!DOCTYPE html>
<html lang="en">
  <% include ../partials/head %>
  <body>
    <% include ../partials/navbar %>
    <div class="px-3">
      <section>
        <!-- Project -->
        <div class="card px-3 py-3">
          <table
            class="table is-fullwidth has-text-centered"
            id="projects-table"
          >
            <thead>
              <tr>
                <th>참여자</th>
                <th>프로젝트</th>
                <th>실험</th>
                <th>참여일시</th>
                <th>액션</th>
              </tr>
            </thead>
            <tbody class="is-vcentered">
              <% for( let result of results ) { %>
              <tr>
                <td>
                  <a href="/admin/users/<%= result.User.email %>">
                    <%= result.User.name %>
                  </a>
                </td>
                <td>
                  <a href="/admin/projects/<%= result.Project.id %>">
                    <%= result.Project.name %>
                  </a>
                </td>
                <td>
                  <a href="/admin/experiments/<%= result.Experiment.id %>">
                    <%= result.Experiment.name %>
                  </a>
                </td>
                <td>2020.03.05</td>
                <td>
                  <a class="button is-primary is-small is-centered">
                    <i class="fa fa-download mr-1"></i>결과다운
                  </a>
                  <a class="button is-danger is-small is-centered">
                    <i class="fa fa-trash mr-1"></i>삭제
                  </a>
                </td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </section>
    </div>
  </body>
  <script></script>
</html>
